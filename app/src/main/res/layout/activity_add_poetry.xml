<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Poetry.AddPoetry"
    android:padding="10dp"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Add Poetry"
        android:id="@+id/add_poetry_toolbar"
        />


    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Poetry"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:id="@+id/add_poetry_data_edittext"
        android:minHeight="60dp"
        android:inputType="text"
        android:background="@drawable/editext_bg_design"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Poet Name"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:id="@+id/add_poetry_name_edittext"
        android:minHeight="60dp"
        android:inputType="text"
        android:background="@drawable/editext_bg_design"
        android:layout_marginTop="15dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/submit_data_btn"
        android:text="Submit"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_bg_design"
        />

</LinearLayout>